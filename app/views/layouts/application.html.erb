<!DOCTYPE html>
<%= render :partial => "/shared/html_tag" %>
<% site_bar = render(:partial => "/shared/site_bar", :locals => {:head => true}) -%>
<%= render :partial => "/shared/head" %>
<body>
  <%= render :partial => "/shared/ie6check" if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>

  <div id="page-top"> <!--Page-top-->
    <div id="page-bottom"> <!--Page-bottom-->
      <div id="page_container"> <!--Page_container-->

        <div id="header"> <!--Header-->
          

          <%= render :partial => "/shared/header" %>

          <div id="page-call-default" style="display: none;">
            <% if @page.content_for :page_call %>
              <%= raw @page.content_for :page_call %>
            <% else %>
              <p><%= @page.title %></p>
            <% end %>
          </div>
          
          <div class="page-call">
          </div>
        </div>  <!--End Header-->

        <div id="content">
          <%= yield %>
        </div>	

        <div id="footer" class="clear"> <!--Footer-->
          <%= render :partial => "/shared/footer" -%>
        </div>  <!--End Footer-->       

      </div> <!--End Page_container-->
    </div> <!--End Page-bottom-->
  </div> <!--End Page-top-->
</body>
</html>
