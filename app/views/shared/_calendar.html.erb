<%

def month_link(month_date)
  #breakpoint
  link_to(I18n.localize(month_date, :format => "%B"), {:month => month_date.month, :year => month_date.year})
end

# custom options for this calendar
def event_calendar_opts
  { 
    :year => @year,
    :month => @month,
    :event_strips => @event_strips,
    :month_name_text => I18n.localize(@shown_month, :format => "%B"),
    :previous_month_text => %(<div id="month-left"> <span> << </span> #{month_link(@shown_month.prev_month)} </div>),
    :next_month_text => %(<div id="month-right"> <span> >> </span> #{month_link(@shown_month.next_month)} </div>),
    #      :use_all_day => true,
    :height => 200,
  }
end

def event_calendar
  # args is an argument hash containing :event, :day, and :options
  calendar event_calendar_opts
end


-%>


<h2>Calend√°rio do Curso</h2>
<div id="calendar">
  <%= raw(event_calendar) %>
</div>