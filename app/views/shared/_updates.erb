<h2>Últimas <span>Notícias</span></h2>
<% if @noticias.empty? %>
  <p>Nenhuma notícia encontrada</p>
<% else %>
  <ul>
  <% @noticias.each do |noticia| %>
    <li>
      <div class="news_image">
        <span></span>
        <% if noticia.image.nil? %>
          <img alt="image" src="/images/news/new1.png">
        <% else %>
          <img alt="image" src="<%=noticia.image.url%>">
        <% end %>
      </div>
      <div class="new">
        <h3><%= truncate(noticia.title, :length => 19) %></h3>
        <br/>
        <p><%= truncate(sanitize(noticia.text, :tags => ""), :length => 55) %></p>
        <%= link_to "Leia mais", update_path(noticia), :class=>"button see-more", :title=>"" %>
      </div>
    </li>
  <% end %>
  <%= link_to "Mais antigas", updates_path(), :class=>"button see-more see-more-news", :title=>"" %>
  <div class="clear"></div>
  </ul>
<% end %>