<% content_for :body_content_left do %>
  <ul id="page-new">
    <% studies.each do |study| %>

      <li class="clear">
        <div class="call">
          <h3>
            <%= image_fu study.study_category.image, nil, :width => 40, :height=>40 %>
            <%= study.title %> 
          </h3>
          <h4><%= link_to "Download", study.link.url if study.link %> </h4>
        </div>

        <p class="clear"><%= truncate(sanitize(study.text, :tags=>""), :length => 190) %> </p>

        <%= link_to "Leia mais", study_path(study), :title => "", :class=>"see-more" %>
        <%= link_to "Editar", edit_admin_study_path(study), :title=>"", :class => "edit" if user_signed_in? %>
      </li>
    <% end %>
  </ul>  
<% end %>

<% content_for :body_content_right do %>
<h2><span>Categorias</span></h2>
<ul class="see-too">
<% @categorias_de_conteudo.each do |categoria| %>
    <%= link_to study_category_path(categoria), :title=>"" do %>
    <li>
        <h3> <%=  truncate(categoria.name, :length => 19)  %>  </h3>
        <%= image_fu(categoria.image, nil) %>
        
    </li>
    <% end %>
  <% end %>

<% end %>
</ul>
<%= render :partial => "/shared/content_page" %>
