<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(event) -%>">
  <span class='title'>
    <%= event.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), day_path(:dia => event.start_at.day, :mes => event.start_at.month, :ano => event.start_at.year),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_event_path(event),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_event_path(event),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => event.name),
        :method => :delete %>
  </span>
</li>
