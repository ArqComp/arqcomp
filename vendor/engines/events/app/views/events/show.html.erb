<% content_for :body_content_title do %>
  <%= @date.strftime("%d/%m/%Y") %>
<% end %>

<% content_for :body_content_left do %>
  <ul id="page-new">
    <% @day_events.each do |event| %>
      <li class="clear">
        <div class="call">
          <h3><%= event.name %> </h3>
          <%#*<h4>Evento</h4>%>
        </div>
        <p class="clear">
          Inicio: <%= event.start_at.strftime("%d/%m/%Y às %H:%M") %><br/>
          Fim: <%= event.end_at.strftime("%d/%m/%Y às %H:%M") %><br/>
          <%= "O dia todo" if event.all_day %>
        </p>
        <%= link_to "Editar", edit_admin_event_path(event), :title=>"", :class => "edit" if user_signed_in? %>
      </li>

    <% end %>
  </ul>
<% end %>

<% content_for :body_content_right do %>
  <%= render :partial => "/shared/calendar" %>
<% end %>

<%= render :partial => "/shared/content_page" %>
