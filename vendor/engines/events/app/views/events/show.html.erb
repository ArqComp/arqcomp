<% content_for :body_content_title do %>
  <%= @event.name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @event.name %>
    </p>
  </section>
  <section>
    <h1>Start At</h1>
    <p>
      <%=raw @event.start_at %>
    </p>
  </section>
  <section>
    <h1>End At</h1>
    <p>
      <%=raw @event.end_at %>
    </p>
  </section>
  <section>
    <h1>All Day</h1>
    <p>
      <%=raw @event.all_day %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="events">
      <% @events.each do |event| %>
        <li>
          <%= link_to event.name, event_path(event) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
