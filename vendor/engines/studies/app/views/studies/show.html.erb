<% content_for :pre_body_content_title do %>
  <%= link_to "Editar", edit_admin_study_path(@study), :title=>"", :class => "edit edit-new" if user_signed_in? %>
<% end %>

<% content_for :body_content_title do %>
  <%= @study.title %>
<% end %>

<% content_for :body_content_left do %>
  <span><%= link_to 'Download', @study.link.url if @study.link %></span> 
  <div>
    <%=raw @study.text %>
	<%= link_to_function "Voltar", 'history.go(-1);', :class=>"go-back", :title=>"" %>
  </div>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="studies">
      <% @study.study_category.studies.each do |study| %>
        <% if study != @study %>
        <li>
          <%= link_to study.title, study_path(study) %>
        </li>
        <% end %>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
