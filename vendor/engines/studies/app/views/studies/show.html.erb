<% content_for :body_content_title do %>
  <%= @study.title %>
<% end %>

<% content_for :body_content_left do %>
  <span><%= link_to 'Download', @study.link.url if @study.link %></span> 
  <div>
    <%=raw @study.text %>
  </div>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="studies">
      <% @study.study_category.studies.each do |study| %>
        <% if study != @study %>
        <li>
          <%= link_to study.title, study_path(study) %>
        </li>
        <% end %>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
