<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(study_category) -%>">
  <span class='title'>
    <%= study_category.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), study_category_path(study_category),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_study_category_path(study_category),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_study_category_path(study_category),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('delete', :scope => 'admin.study_categories.actions', :title => study_category.name),
        :method => :delete %>
  </span>
</li>
