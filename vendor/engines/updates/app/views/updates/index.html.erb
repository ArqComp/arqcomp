<div class="main">  <!--Main-->
	<div class="back-right"> <!--Back-right-->
		<div class="wrapper"> <!--Wrapper-->
	
			<div class="col-1">
			
				<h2>Notícias</h2>
				
				<ul id="page-new">
					<% @updates.each do |update| %>
					
						<li class="clear">
							<div class="call">
								<h3><%= update.title %> </h3>
								<h4><%= update.created_at.strftime("%d/%m/%Y às %H:%M") %></h4>
							</div>
							
							<p class="clear"><%= truncate(sanitize(update.text, :tags=>""), :length => 190) %> </p>
							
							<%= link_to "Leia mais", update_path(update), :title => "", :class=>"see-more" %>
							<%= link_to "Editar", edit_admin_update_path(update), :title=>"", :class => "edit" if user_signed_in? %>
						</li>
					<% end %>
					
					<%= will_paginate @updates %>
					
					<%#*<a href="#" title="">1 2 3 ... 10</a>%>
				</ul>  
			
			</div>

			<div class="col-2">
			
			</div>
		</div><!--Wrapper-->
	</div> <!--Back-right-->
</div>  <!--End Main-->
