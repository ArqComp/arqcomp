<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(update) -%>">
  <span class='title'>
    <%= update.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), update_path(update),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_update_path(update),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_update_path(update),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => update.title),
        :method => :delete %>
  </span>
</li>
